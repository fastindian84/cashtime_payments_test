<p id="notice"><%= notice %></p>

<h1>App Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User name</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_requests.each do |app_request| %>
      <tr>
        <td><%= app_request.title %></td>
        <td><%= app_request.description %></td>
        <td><%= app_request.user_name %></td>
        <td><%= app_request.amount %></td>
        <td><%= app_request.status %></td>
        <td><%= link_to 'Show', app_request %></td>
        <td><%= link_to 'Edit', edit_app_request_path(app_request) %></td>
        <td><%= link_to 'Destroy', app_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Request', new_app_request_path %>
